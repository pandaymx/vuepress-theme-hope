{
  "*.vue": ["eslint --fix", "prettier --write"],
  "*.{js,ts}": [
    "eslint --fix",
    "prettier --write",
    "cross-env TZ=Etc/UTC vitest related --run"
  ],
  "*.md": ["markdownlint-cli2 --fix", "prettier --write"],
  "*.{json,yml}": ["prettier --write"],
  "*.scss": ["stylelint --fix", "prettier --write"],
  "package.json": ["sort-package-json"]
}
